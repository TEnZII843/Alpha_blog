<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <tr>
        <td><%= article.title%></td>
        <td><%= article.body %></td>
        <% if logged_in? && article.user == current_user %>
          <td><%= link_to 'Edit', edit_article_path(article) %></td>
          <td><%= link_to 'show', article %></td>
        <% end %>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>